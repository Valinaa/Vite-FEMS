{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "alwaysStrict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src",
        "auto-imports.d.ts",
        "components.d.ts",
        "vite.config.ts",
        "cspell.config.cjs"
    ],
    "exclude": ["node_modules", "/**/*.md", "static"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
